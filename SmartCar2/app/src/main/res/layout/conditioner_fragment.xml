<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conditioner_frament"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/art_space"/>
    <LinearLayout
        android:layout_width="@dimen/control_item_center"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/desc_text"
            android:text="Now"
            android:textColor="@android:color/black"
            android:textSize="@dimen/desc_text" />

        <TextView
            android:id="@+id/currentTemperature"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="40C"
            android:textColor="@android:color/black"
            android:textSize="@dimen/desc_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/control_item_center"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:textColor="@android:color/black"
            android:textSize="@dimen/desc_text" />
        <TextView
            android:id="@+id/condSeekValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/desc_text" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/control_item_center"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/condSeekBar"
            android:layout_width="@dimen/control_item_center"
            android:layout_height="wrap_content"
            android:max="40"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/art_space"/>
    <LinearLayout
        android:layout_width="@dimen/control_item_center"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/condStateToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />
    </LinearLayout>

</LinearLayout>